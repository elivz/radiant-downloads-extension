%h2= "Files for #{@reader.name}"

- f_names = [:notice, :warning, :message]
- for name in f_names
  - if flash[name]
    .flash-message= flash[name]

- unless @reader.nil?
  %ul#downloads.folders
    - if @folders.empty?
      %li.alert
        No files have been uploaded yet.
    - else
      = render :partial => 'folder', :collection => @folders
  %p#logout
    = link_to( 'Log Out', reader_logout_url )
    
- else
  %p.alert
    You must be logged in to view files.